<div class="container-celebrities-new">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>NEW CHARACTER</h2>

            <hr>

            <form action="/celebrities/{{id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="{{newCelebrity.title}}" class="form-label">NAME</label>
                    <input type="text" class="form-control" id="{{newCelebrity.title}}" name="{{newCelebrity.title}}">
                </div>
                <div class="mb-3">
                    <label for="{{newCelebrity.occupation}}" class="form-label">OCCUPATION</label>
                    <input type="text" class="form-control" id="{{newCelebrity.occupation}}"
                        name="{{newCelebrity.occupation}}">
                </div>
                <div class="mb-3">
                    <label for="{{newCelebrity.catchPhrase}}" class="form-label">CATCHPHRASE</label>
                    <input type="text" class="form-control" id="{{newCelebrity.catchPhrase}}"
                        name="{{newCelebrity.catchPhrase}}">
                </div>

                <button type="submit" class="btn btn-dark">SAVE</button>
                <a href="/celebrities" class="btn btn-dark">RETURN TO CHARACTER LIST</a>
            </form>


            <hr>


        </div>
    </div>


</div>