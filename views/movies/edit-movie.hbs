<div class="container-movies-edit">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>EDIT MOVIES</h1>

            <hr>

            <form action="/movies/{{newMovie.id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="{{newMovie.title}}" class="form-label">TITLE</label>
                    <input type="text" class="form-control" id="{{newMovie.title}}" name="{{newMovie.title}}"
                        value="{{newMovie.title}}">
                </div>
                <div class="mb-3">
                    <label for="{{newMovie.genre}}" class="form-label">GENRE</label>
                    <input type="text" class="form-control" id="{{newMovie.genre}}" name="{{newMovie.genre}}"
                        value="{{newMovie.genre}}">
                </div>

                <div class="mb-3">
                    <label for="{{newMovie.plot}}" class="form-label">PLOT</label>
                    <input type="text" class="form-control" id="{{newMovie.plot}}" name="{{newMovie.plot}}"
                        value="{{newMovie.plot}}">
                </div>

                <div class="mb-3">
                    <label for="cast" class="form-label">CAST</label>
                    <select name="cast" id="celebrities" class="form-select">
                        {{#each newCelebrity}}
                        <option value={{id}}>{{name}}</option>
                        {{/each}}
                    </select>
                </div>

                <button type="submit" class="btn btn-dark">SAVE</button>
                <a href="/movies" class="btn btn-dark">RETURN TO MOVIES LIST</a>
            </form>

            <hr>


        </div>
    </div>


</div>